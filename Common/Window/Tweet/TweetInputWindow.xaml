<Window x:Class="FightingCommunityAdministrator.TweetInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ツイート入力画面" Height="268" Width="490" WindowStyle="ThreeDBorderWindow" ResizeMode="CanResize">
    <Grid>
        <Button Content="ツイートする" Height="23" HorizontalAlignment="Right" Margin="0,0,5,5" Name="TweetButton" VerticalAlignment="Bottom" Width="150" Click="_ClickOKButton" TabIndex="0" />
        <TextBlock Height="21" HorizontalAlignment="Left" Margin="5,0,0,9" Name="CharaLengthTextBlock" Text="残入力可能文字数：０" VerticalAlignment="Bottom" FontSize="14" TextAlignment="Left" FontWeight="Bold" Foreground="#FF4B4BFF" Width="317" />
        <TextBox HorizontalAlignment="Stretch" Name="TweetTextBox" VerticalAlignment="Stretch" TextChanged="_ChangeText" AcceptsReturn="True" Margin="-1,0,1,32" />
    </Grid>
</Window>
